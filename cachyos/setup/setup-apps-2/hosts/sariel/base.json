{
   "common_packages": ["common/packages/system_cachyos.json"],

   "packages": {
      "std": ["amd-ucode", "lact", "iwd", "wireless-regdb", "networkmanager"]
   },

   "install_files": [
      {
         "owner": "root",
         "operation": "copy",
         "source": "common/files/lenovo_battery_limit/lenovo_battery_limit.service",
         "target_dir": "/etc/systemd/system"
      },
      {
         "owner": "root",
         "operation": "copy",
         "source": "common/files/lenovo_battery_limit/lenovo_battery_limit.fish",
         "target_dir": "/usr/local/bin"
      },
      {
         "owner": "root",
         "operation": "copy",
         "source": "common/files/screen_off_service/screen_off.service",
         "target_dir": "/etc/system/system"
      },
      {
         "owner": "root",
         "operation": "copy",
         "source": "common/files/screen_off_service/screen_off.fish",
         "target_dir": "/usr/local/bin"
      }
   ],

   "spawn_files": [
      {
         "owner": "root",
         "target": "/etc/NetworkManager/conf.d/wifi_backend.conf",
         "content": "[device]\nwifi.backend=iwd"
      }
   ],

   "services": {
      "enable": [
         "lenovo_battery_limit",
         "NetworkManager",
         "ananicy-cpp",
         "sddm",
         "getty",
         "ufw"
      ]
   }
}
