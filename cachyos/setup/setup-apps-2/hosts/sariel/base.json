{
   "common_packages": ["common/packages/cachyos_env.json"],

   "packages": {
      "std": [
         "amd-ucode",
         "linux-firmware",
         "linux-cachyos",
         "wireless-regdb",
         "iwd",
         "networkmanager",
         "lact"
      ]
   },

   "install_files": [
      {
         "owner": "root",
         "operation": "copy",
         "source": "common/files/lenovo_battery_limit_service/lenovo_battery_limit.service",
         "target_dir": "/etc/systemd/system"
      },
      {
         "owner": "root",
         "operation": "copy",
         "source": "common/files/lenovo_battery_limit_service/lenovo_battery_limit.fish",
         "target_dir": "/usr/local/bin"
      },
      {
         "owner": "root",
         "operation": "copy",
         "source": "common/files/screen_off_service/screen_off.service",
         "target_dir": "/etc/systemd/system"
      },
      {
         "owner": "root",
         "operation": "copy",
         "source": "common/files/screen_off_service/screen_off.fish",
         "target_dir": "/usr/local/bin"
      }
   ],

   "spawn_files": [
      {
         "owner": "root",
         "target": "/etc/NetworkManager/conf.d/wifi_backend.conf",
         "content": "[device]\nwifi.backend=iwd"
      }
   ],

   "services": {
      "enable": [
         "lenovo_battery_limit",
         "NetworkManager",
         "ananicy-cpp",
         "sddm",
         "getty",
         "ufw"
      ]
   }
}
