{
   "$schema": "https://json.schemastore.org/tsconfig",

   "compilerOptions": {
      "strict": true,
      "module": "ES2022",
      "target": "ES2022",
      "lib": ["ES2023"],
      "moduleResolution": "Bundler",
      "jsx": "react-jsx",
      "jsxImportSource": "ags/gtk4",
      "allowImportingTsExtensions": true,

      "paths": {
         "ags": ["/usr/share/ags/js/src"],
         "ags/*": ["/usr/share/ags/js/src/*"],
         "ags/gtk4": ["/usr/share/ags/js/src/gtk4"],
         "ags/gtk4/*": ["/usr/share/ags/js/src/gtk4/*"]
      }
   }
}
